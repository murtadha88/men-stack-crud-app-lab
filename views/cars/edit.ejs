<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/cars/<%=car._id%>?_method=PUT" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%= car.name %>"/> <br>

        <label for="name">Company:</label>
        <input type="text" name="company" id="name" value="<%= car.company %>" /> <br>

        <label for="name">Model:</label>
        <input type="number" name="model" id="name" value="<%= car.model %>" /> <br>

        <label for="name">Price:</label>
        <input type="number" name="price" id="name" value="<%= car.price %>" /> <br>
    
        <button type="submit">Save</button> <br>
      </form>
      <a href="/cars">Back to Cars</a>
</body>
</html>